@model MineViewModel

@{
    ViewBag.Title = "My Books";
    Layout = "_Layout";
}

<h2>My Books</h2>
<hr />

<form asp-controller="Books" asp-action="Create" method="post" class="col-md-12">
    <div class="input-group">
        <input asp-for="Title" class="form-control" placeholder="Add a Book" />
        <span class="input-group-btn">
            <button class="btn btn-secondary" type="submit">
                <i class="glyphicon glyphicon-plus"></i>
            </button>
        </span>
    </div>
    <span asp-validation-for="Title" class="text-danger"></span>
</form>

<ul>
    @foreach (var book in Model.MyBooks)
    {
        <li>
            @book.Title
        </li>
    }
</ul>
