@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}

<h2>All Books</h2>
<hr />
<div class="grid">
    @foreach (var book in Model)
    {
        <div class="grid-item">
            <img src="@book.Cover" />
        </div>
    }
</div>

@section scripts {
    <script>
        $(function() {
            $('.grid').masonry({
                itemSelector: '.grid-item',
                columnWidth: 128,
                isFitWidth: true
            });
        });
    </script>
}
